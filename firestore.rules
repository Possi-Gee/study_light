rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own user profile
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow authenticated users to read subjects and quizzes
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Allow creation
      allow write, delete: if false; // More specific rules can be added later
    }
    
    match /subjects/{subjectId}/{document=**} {
       allow read, write: if request.auth != null;
    }

    match /quizzes/{quizId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Teachers can create/edit
    }

    // Allow authenticated users to create submissions
    match /submissions/{submissionId} {
        allow create, read: if request.auth != null;
    }

    // This rule is for collection group queries.
    // It allows a logged-in user to query the 'submissions' collection
    // across all parent documents.
    match /{path=**}/submissions/{submissionId} {
      allow read: if request.auth != null;
    }
  }
}
