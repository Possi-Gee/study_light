
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is a teacher
    function isTeacher() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    // Rules for user profiles
    match /users/{userId} {
      // Any authenticated user can create their own user document (for registration)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Users can read and update their own profile
      allow get, update: if isAuthenticated() && request.auth.uid == userId;
      // Teachers can read any user's profile
      allow list: if isTeacher();
    }

    // Rules for subjects and the notes within them
    match /subjects/{subjectId} {
      // Teachers can create, update, and delete subjects
      allow write: if isTeacher();
      // Any authenticated user can read subjects
      allow get, list: if isAuthenticated();
    }
    
    match /subjects/{subjectId}/notes/{noteId} {
        // Teachers can create, update, and delete notes
        allow write: if isTeacher();
        // Any authenticated user can read notes
        allow get, list: if isAuthenticated();
    }

    // Rules for quizzes
    match /quizzes/{quizId} {
        // Teachers can create, update, and delete quizzes
        allow write: if isTeacher();
        // Any authenticated user can read quizzes
        allow get, list: if isAuthenticated();
    }

    // Rules for quiz submissions
    match /submissions/{submissionId} {
      // Students can create their own submissions
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      // Teachers can read any submission
      allow get, list: if isTeacher();
      // Students can read their own submissions
      allow get: if isAuthenticated() && get(/databases/$(database)/documents/submissions/$(submissionId)).data.studentId == request.auth.uid;
    }
    
    // Rules for announcements
    match /announcements/{announcementId} {
        // Teachers can create and delete announcements
        allow create, delete: if isTeacher();
        // Any authenticated user can read announcements
        allow get, list: if isAuthenticated();
    }
  }
}
